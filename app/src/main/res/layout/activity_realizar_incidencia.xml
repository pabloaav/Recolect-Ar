<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBotonBlanco"
    android:orientation="vertical"
    android:text="@string/app_name_actionBar"
    tools:context=".logica.RealizarIncidencia">

    <TextView
        android:id="@+id/tv_gestionarInc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:fontFamily="@font/roboto_mono_bold_italic"
        android:hint="@string/tv_gestion_inc"
        android:textAlignment="center"
        android:textColorHint="@color/colorBotonVerde"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_tipo_incidencia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:text=""
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imagemId"
        android:layout_width="88dp"
        android:layout_height="84dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:src="@drawable/icono_sin_foto256x"

        />

    <Button
        android:id="@+id/btnCargarImg"
        android:layout_width="60mm"
        android:layout_height="50sp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/stylo_boton_pressed"
        android:fontFamily="@font/roboto_mono_bold_italic"
        android:hint="@string/bt_cargarFoto"
        android:onClick="onclick"
        android:textColor="#ffff"
        android:textColorHint="@color/colorBotonBlanco"
        android:textSize="18sp"
        android:drawableLeft="@drawable/icono_cargar_foto"/>


    <Button
        android:id="@+id/btnSubir"
        android:layout_width="60mm"
        android:layout_height="50sp"
        android:layout_below="@+id/imagemId"
        android:layout_gravity="center"
        android:layout_marginTop="320dp"
        android:background="@drawable/stylo_boton_pressed"
        android:fontFamily="@font/roboto_mono_bold_italic"
        android:hint="@string/bt_realizarInc"
        android:onClick="subirIncidencia"
        android:textColor="#ffff"
        android:textColorHint="@color/colorBotonBlanco"
        android:textSize="18sp"
        android:drawableLeft="@drawable/ic_action_registrarse"/>

    <TextView
        android:id="@+id/tv_ubicacion"
        android:layout_width="50mm"
        android:layout_height="30sp"
        android:layout_gravity="center|left"
        android:layout_marginLeft="12sp"
        android:layout_marginTop="-340dp"
        android:layout_marginBottom="25sp"
        android:ems="10"
        android:fontFamily="@font/roboto_mono_bold_italic"
        android:hint="@string/tv_ubicacion"
        android:inputType="textPersonName"
        android:textColor="@color/colorBotonVerde"
        android:textColorHint="@color/colorBotonVerde"
        android:textSize="16sp" />

    <Button
        android:id="@+id/button"
        android:layout_width="60mm"
        android:layout_height="50sp"
        android:layout_gravity="center"
        android:layout_marginTop="10sp"
        android:background="@drawable/stylo_boton_pressed"
        android:fontFamily="@font/roboto_mono_bold_italic"
        android:hint="@string/bt_cargarUbic"
        android:onClick="subirUbicacion"
        android:textColor="@color/colorBotonBlanco"
        android:textColorHint="@color/colorBotonBlanco"
        android:textSize="18sp"
        android:drawableLeft="@drawable/icono_cargar_ubicacion_f"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_direccion"
        android:layout_width="56mm"
        android:layout_height="45sp"
        android:layout_marginTop="20sp"
        android:textColorHint="@color/colorBotonVerde">

        <EditText
            android:id="@+id/txt_direccion_particular"
            android:layout_width="55mm"
            android:layout_height="40sp"
            android:layout_gravity="center|left"
            android:layout_marginLeft="10sp"
            android:ems="10"
            android:fontFamily="@font/roboto_mono_bold_italic"
            android:hint="@string/txt_direccion"
            android:inputType="textPersonName"
            android:textSize="16sp"/>

    </android.support.design.widget.TextInputLayout>


    <ImageButton
        android:id="@+id/imgButton_2"
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:layout_gravity="right"
        android:layout_marginTop="-190sp"
        android:layout_marginRight="5sp"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/ic_info_dialog" />

    <ImageButton
        android:id="@+id/imgButton3"
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:layout_gravity="right"
        android:layout_marginTop="115sp"
        android:layout_marginRight="5sp"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/ic_info_dialog" />


    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_descripcionInc"
        android:layout_width="56mm"
        android:layout_height="55sp"
        android:layout_marginTop="30sp"
        android:textColorHint="@color/colorBotonVerde">

        <EditText
            android:id="@+id/txt_descripcion"
            android:layout_width="55mm"
            android:layout_height="45sp"
            android:layout_marginLeft="10sp"
            android:ems="10"
            android:fontFamily="@font/roboto_mono_bold_italic"
            android:hint="@string/txt_descripcion"
            android:inputType="textPersonName"
            android:textSize="16sp" />

    </android.support.design.widget.TextInputLayout>

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:layout_gravity="right"
        android:layout_marginTop="-45sp"
        android:layout_marginRight="5sp"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/ic_info_dialog" />


</LinearLayout>
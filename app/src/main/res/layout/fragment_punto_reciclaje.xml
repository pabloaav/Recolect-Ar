<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLay_Ecopuntos"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPruebaFondoFarg"
    android:clickable="true"
    android:orientation="vertical"
    tools:context="fragmentos.PuntoReciclajeFragment">


    <android.support.v7.widget.CardView

        android:id="@+id/carView_Ecopuntos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10sp"
        app:cardCornerRadius="10dp">

        <FrameLayout

            android:id="@+id/frameLay_Ecopuntos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:weightSum="1">


            <ImageView

                android:id="@+id/imageView_Foto"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="right"
                android:layout_marginTop="5dp"
                android:background="@drawable/fondo_ecopunto_final_600x"
                android:scaleType="centerCrop" />

        </FrameLayout>

        <LinearLayout

            android:id="@+id/linearLay_DatosPunto"
            android:layout_width="290dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5sp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_NombrePunto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/roboto_mono_bold_italic"
                android:text="EcoPunto N°1: Plaza Libertad "
                android:textColor="@color/colorBotonVerde"
                android:textSize="14sp"
                android:textStyle="bold"  />



            <TextView

                android:id="@+id/tv_Ubicacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/roboto_mono_bold_italic"
                android:text="Ubicacion: Av. Hipólito Yrigoyen 2330"
                android:textColor="@color/colorBotonVerde"
                android:textSize="14sp"
                android:textStyle="bold" />


            <TextView

                android:id="@+id/tv_Informacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/roboto_mono_bold_italic"
                android:text="Informacion: "
                android:textColor="@color/colorBotonVerde"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>
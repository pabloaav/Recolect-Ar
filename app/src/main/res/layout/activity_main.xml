<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_main"
    tools:context=".logica.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fondo_main"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="72dp">


        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_correoLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <EditText
                android:id="@+id/txt_correoLogin"
                android:layout_width="60mm"
                android:layout_height="55sp"
                android:layout_gravity="center"
                android:layout_marginTop="5sp"
                android:drawableStart="@drawable/ic_mail_black_24dp"
                android:drawableLeft="@drawable/ic_mail_black_24dp"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="@string/txt_correoLogin"
                android:inputType="textPersonName"
                android:textColor="@color/colorAccent"
                android:textColorHighlight="@color/colorAccent"
                android:textColorHint="@color/colorAccent"
                android:textSize="18sp" />

        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_contrasena"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true">

            <EditText
                android:id="@+id/txt_contrasena"
                android:layout_width="60mm"
                android:layout_height="55sp"
                android:layout_gravity="center"
                android:layout_marginTop="5sp"
                android:drawableStart="@drawable/ic_vpn_key_black_24dp"
                android:drawableLeft="@drawable/ic_vpn_key_black_24dp"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="@string/txt_Contrasena"
                android:inputType="textPassword"
                android:textSize="18sp" />

        </android.support.design.widget.TextInputLayout>


        <Button
            android:id="@+id/bt_loguear"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="60mm"
            android:layout_height="55sp"
            android:layout_gravity="center"
            android:layout_marginTop="5sp"
            android:background="@drawable/stylo_boton_pressed"
            android:drawableLeft="@drawable/login_user_32x"
            android:minWidth="88dip"
            android:onClick="onClick"
            android:text="@string/bt_Loguear"
            android:textColor="@color/colorBotonBlanco"
            android:textColorHighlight="@color/colorAccent"
            android:textColorHint="@color/colorAccent"
            android:textSize="18sp" />

        <Button
            android:id="@+id/bt_registrarse"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="60mm"
            android:layout_height="55sp"
            android:layout_gravity="center"
            android:layout_marginTop="5sp"
            android:background="@drawable/stylo_boton_pressed"
            android:drawableLeft="@drawable/icono_add_user_32x"
            android:onClick="onClick"
            android:text="@string/bt_Registrarse"
            android:textColor="@color/colorBotonBlanco"
            android:textColorHighlight="@color/colorAccent"
            android:textColorHint="@color/colorAccent"
            android:textSize="18sp" />

        <Button
            android:id="@+id/bt_loggoogle"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="60mm"
            android:layout_height="55sp"
            android:layout_gravity="center"
            android:layout_marginTop="5sp"
            android:background="@drawable/stylo_boton_pressed"
            android:drawableLeft="@drawable/google_icon_log_32x"
            android:onClick="onClick"
            android:text="iniciar con google"
            android:textColor="@color/colorBotonBlanco"
            android:textSize="18sp"
            android:textStyle="normal" />

        <Button
            android:id="@+id/bt_logface"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="60mm"
            android:layout_height="55sp"
            android:layout_gravity="center"
            android:layout_marginTop="5sp"
            android:background="@drawable/stylo_boton_pressed"
            android:drawableLeft="@drawable/facebook_icon_32x"
            android:onClick="onClick"
            android:text="iniciar con facebook"
            android:textColor="@color/colorBotonBlanco"
            android:textSize="18sp"
            android:textStyle="normal" />

    </LinearLayout>


</LinearLayout>